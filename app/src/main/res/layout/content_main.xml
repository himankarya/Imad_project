<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_last_screen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/appbar"
        android:adjustViewBounds="true"
        android:id="@+id/waveImg"
        />
    <!---->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/waveImg"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3E5879"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">
                    <!--5d7ba1-->
                    <!--android:background="@drawable/s1_small_bg"-->
                    <!--android:background="#5d7ba1"-->

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/resulBTN"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/frontBTN_color"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_27sdp"
                                android:layout_marginRight="@dimen/_27sdp"
                                android:drawableLeft="@drawable/ic_live_tv_24"
                                android:gravity="center"
                                android:text="@string/select_tv_brand_menu"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_14sdp"
                                tools:ignore="RtlCompat"

                                />
                            <!--android:textAlignment="textStart"-->
                            <!--android:layout_margin="@dimen/_10sdp"-->

                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_gravity="end|center"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitXY"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_arrow_next" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/myDeviceBTN"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:padding="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/frontBTN_color"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_27sdp"
                                android:layout_marginRight="@dimen/_27sdp"
                                android:drawableLeft="@drawable/ic_home_favorite_24"
                                android:gravity="center"
                                android:text="@string/my_devices"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_14sdp"
                                tools:ignore="RtlCompat" />
                            <!--android:textAlignment="textStart"-->
                            <!--android:layout_margin="@dimen/_10sdp"-->

                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_gravity="end|center"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitXY"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_arrow_next" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <!--android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"-->

                </LinearLayout>

                <!--Add Ad-->
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/emailBTN"
                        android:layout_width="60.0dip"
                        android:layout_height="60.0dip"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button"
                        android:src="@drawable/s1_email_button" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Email"
                        android:textColor="@color/colorAccent"
                        android:textSize="15.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/emailLayout"
                    android:layout_toRightOf="@+id/emailLayout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/policyBTN"
                        android:layout_width="60.0dip"
                        android:layout_height="60.0dip"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button"
                        android:src="@drawable/s1_info_button" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Info"
                        android:textColor="@color/colorAccent"
                        android:textSize="15.0sp" />
                </LinearLayout>


            </RelativeLayout>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fl_adplaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:paddingTop="@dimen/_8sdp"
                android:visibility="gone"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
